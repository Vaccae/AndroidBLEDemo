<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:padding="1dp"
        android:text="Service"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@+id/tvserviceType"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView"/>

    <TextView
        android:id="@+id/tvuuidTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UUID:"
        android:textSize="11sp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvuuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/tvuuidTitle"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <TextView
        android:id="@+id/tvserviceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tvuuidTitle"/>

    <LinearLayout
        android:id="@+id/characteristicLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvserviceType"
        android:orientation="vertical" />
</androidx.constraintlayout.widget.ConstraintLayout>